<div class="container bg-light" style="margin-top:100px;width:50%">
  <div class="p-5 text-center">
    <h1>Log in</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
      </div>
    
      <div class="mb-3">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control form-control-lg" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions" style="margin-top:30px;">
        <%= f.submit "Log in", class: "btn btn-lg btn-dark" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


<%= content_tag :div, (link_to 'Back', posts_path), class: "text-center" %>
