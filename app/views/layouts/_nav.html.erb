<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">DropIt!</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item">
            <%= link_to "AGS RubyTest", "https://trello.com/b/zkxnFKi1/ags-ruby-test-rafael-pena", class: "nav-link", target: 'blank', 'aria-current': "page" %>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <% if current_user %>
              <a class="nav-link" href="#" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBackdrop" aria-controls="offcanvasWithBackdrop">
                <%= image_tag current_user.profile.avatar, class: "img-thumbnail", width: "50px" %>
              </a>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<% if current_user %>
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasWithBackdrop" aria-labelledby="offcanvasWithBackdropLabel">
  <div class="offcanvas-header">
    <h4 class="offcanvas-title" id="offcanvasWithBackdropLabel">My DropIt! Account</h4>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= image_tag current_user.profile.avatar, style: "width:100%;" %>
          <h4 class="text-center"><%= "#{current_user.profile.name} #{current_user.profile.lastname}" %></h4>
        </div>
        <div class="col-md-6 border text-center">Following</div>
        <div class="col-md-6 border text-center"><%= current_user.following.count %></div>
        <div class="col-md-6 border text-center">Followers</div>
        <div class="col-md-6 border text-center"><%= current_user.followers.count %></div>
        <div class="col-md-6 border text-center">Posts</div>
        <div class="col-md-6 border text-center"><%= current_user.posts.count %></div>
        <div class="col-md-6 border text-center">Comments</div>
        <div class="col-md-6 border text-center"><%= current_user.comments.count %></div>
        <div class="d-grid gap-2" style="margin-top:2vh;">
          <%= link_to "Write new post", new_post_path, class: "btn btn-dark" %>
          <%= link_to "Bulk upload posts", bulk_posts_path, class: "btn btn-dark" %>
        </div>
        <div class="d-grid gap-2" style="margin-top:2vh;">
          <%= link_to "View profile page", profile_path(current_user), class: "btn btn-dark" %>
          <%= link_to "Edit account", edit_user_registration_path(current_user), class: "btn btn-dark" %>
        </div>
        <div class="d-grid gap-2" style="margin-top:2vh;">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>